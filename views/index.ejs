<html>
<head>
<title>Troope FB Login Panel</title>
</head>
<body>
<% if (!user) { %>
  <div style="width:500px;height:180px;background-color:#ececec;padding:80px;margin-left:22%;margin-top:9%;">
	<h2 style="font-size:40px;">Welcome! Please log in.</h2>
	<a href="/auth/facebook"><img src="fb-login.jpg" width="151" height="24"></a>
	</div>
<% } else { %>
	<% if(Object.keys(user.data).length === 0) { %>
	<div>
	<form method="post" action="user-put" enctype="multipart/form-data"> 
    <fieldset>
        <legend>User Data</legend>
        <div >
            <div>	
            		<input type="text" name="user_id" id="user_id" placeholder="<%= user.user_id %>" value="<%= user.user_id %>"><br>
                    <input type="text" name="address" id="address" placeholder="address" required> <br>
                    <input type="text" name="bank_no" id="bank_no" placeholder="A/c No" required><br>
                    <input type="text" name="current_company" id="current_company" placeholder="current company" required><br>
                    <input type="text" name="job_title" id="job_title" placeholder="job title" required><br>
                    <input type="boolean" name="freelancing" id="freelancing" placeholder="freelancer" required><br>
                    <input type="text" name="bank_ifsc" id="bank_ifsc" placeholder="IFSC code" required><br>
                    <input type="boolean" name="looking_projects" id="looking_projects" placeholder="looking for projects" required><br>
                    <input type="number" name="mobile" placeholder="mobile" id="mobile" required>
            </div>
        </div>
    </fieldset>
    <input type='submit'  id='submit' value='Submit your Details'/>
	</form>
	</div>
	<% } else { %>
	<h2>Hello, <%= user.username %></h2>
	<p>Address: <%=user.data.address %></p>
	<p>Bank A/C No: <%=user.data.bank_no %></p>
	<p>Current Company Name:<%=user.data.current_company %></p>
	<p>Current Job Title:<%=user.data.job_title %></p>
	<p>freelancing: <%=user.data.freelancing %></p>
	<p>Bank IFSC code:<%=user.data.bank_ifsc %></p>
	<p>Looking For Projects:<%=user.data.looking_projects %> </p>
	<p>mobile No:<%=user.data.mobile %> </p>
	<% } %>
<% } %>
</body>
</html>
